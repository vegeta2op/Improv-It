FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir bentoml scikit-learn pandas numpy joblib

COPY . .

EXPOSE 3001

CMD ["bentoml", "serve", "bento_service:app", "--host", "0.0.0.0", "--port", "3001"]
